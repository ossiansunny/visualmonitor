<?php
/// PHPエラー表示
ini_set('display_errors', 'Off');
/// 親ディレクトリ取得
$kanshidir=__DIR__;
$basedir=explode('htdocs',$kanshidir);
$autodir=$basedir[0] . "vendor\autoload.php";
use PHPMailer\PHPMailer\PHPMailer;
use PHPMailer\PHPMailer\SMTP;
use PHPMailer\PHPMailer\Exception;
mb_internal_encoding("UTF-8");
require_once $autodir;
require_once 'mysqlkanshi.php';
require_once 'alarmwindow.php';

/// メール送信処理
function phpsendmail($hst, $prt, $from, $to, $subj, $body){
 $flg=getmailstatus();
 if ($flg==0){
  $sql="select * from mailserver";
  $rows=getdata($sql);
  $row=explode(',',$rows[0]);
  if (empty($host)){
    $host=$row[0];
  } else {
    $host=$hst;
  }
  if (empty($port)){
    $port=$row[1];
  } else {
    $port=$prt;
  }
  $status=$row[4];
  if ($status == "0" || is_null($status)) {
    /// post : integer
    /// body : array
    $mail = new PHPMailer(true);
    $rcode=0;
    try {
      /// メールサーバー設定
      /// デバック
      ///    $mail->SMTPDebug = SMTP::DEBUG_SERVER;                      
      $mail->Debugoutput = function($str, $level) { syslog(LOG_ERR, "PHP Mailer:" . $str); };                      
      /// SMTPの使用
      $mail->isSMTP();
      /// smtpサーバー設定
      $mail->Host       = $host;
      /// SMTP認証                  
      //    $mail->SMTPAuth   = true;
      /// SMTP ユーザー                                
      //    $mail->Username   = 'vmadmin';
      /// SMTP パスワード                   
      //    $mail->Password   = 'xxxxxxxx';
      /// ポート設定                           
      $mail->Port       = $port;  
      //$mail->Port       = 25;                                  
      //$mail->Port       = 587;                                    
      /// 送信アドレス
      $mail->setFrom($from, 'vmadmin');
      /// 宛先
      $mail->addAddress($to, 'receiver');
      ///cc    
      //    $mail->addCC('vmadmin@centos75.sunnyblue.mydns.jp');
      ///bcc
      //    $mail->addBCC('vmadmin@centos75.sunnyblue.mydns.jp');

      /// htmlメール指定
      //    $mail->isHTML(true)a
      //    $mail->Body = '<html>日本語本文</html>';
      //    $mail->AltBody = '日本語本文';
      /// 件名
      $mail->Subject = mb_encode_mimeheader($subj);
      /// 内容
      if (is_array($body)){
        $bodystr = '';
        foreach ($body as $item){
          $bodystr=$bodystr.$item.'<br>';
        }
        $bodystr=rtrim($bodystr,'<br>');
      }else{
        $bodystr = $body;
      }
      $mail->CharSet = 'UTF-8';
      $mail->isHTML(false);
      $mail->Body    = $bodystr;    

      /// メール送信
      $mail->send();
      $rcode=0;
      delstatus('Mail Server InActive');
      delstatus('Mail Server Active');
      setstatus('0','Mail Server Active');
    } catch (Exception $e) {
      delstatus('Mail Server Active');
      setstatus('1','Mail Server InActive');
      $msg="Message could not be sent. Mailer Error: {$mail->ErrorInfo}";
      $pgm='phpsendmail.php';
      writelogd($pgm,$msg);
      $rcode=1;
    }
  } else {
    delstatus('Mail Server Active');               /// mail送出がエラーで返って来たので
    setstatus('1','Mail Server InActive');         /// メッセージ窓をInActiveにしている
    $msg="Mail Server not registered in database";
    $pgm='phpsendmail.php';
    writelogd($pgm,$msg);
    $rcode=1;
  }
  return $rcode;
 } else {
  $msg="Mail Server inactive"; // getmailstatusでInActiveになっていた
  $pgm='phpsendmail.php';
  writelogd($pgm,$msg);
  return 1;
 }
}
?>
